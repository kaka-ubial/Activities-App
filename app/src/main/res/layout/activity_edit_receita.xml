<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".presentation.ui.activities.RecipeView">

    <!-- Título da Tela -->
    <TextView
        android:id="@+id/logo_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="Editar receita"
        android:textColor="#333333"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botão de Voltar -->
    <ImageView
        android:id="@+id/goBackButton"
        android:layout_width="33dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="Botão de voltar"
        android:src="@drawable/volta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Campo de Nome da Receita -->
    <EditText
        android:id="@+id/recipeName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif"
        android:hint="Nome da receita"
        android:inputType="text"
        android:padding="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_text2" />

    <!-- Campo de Ingredientes -->
    <EditText
        android:id="@+id/editRecipeIngredients"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ingredientes"
        android:padding="14dp"
        android:inputType="textMultiLine"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@id/recipeName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Campo de Modo de Preparo -->
    <EditText
        android:id="@+id/editRecipeInstructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Modo de preparo"
        android:padding="14dp"
        android:inputType="textMultiLine"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@id/editRecipeIngredients"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Botão para Criar a Receita -->
    <Button
        android:id="@+id/editRecipeButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Editar receita"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editRecipeInstructions" />

</androidx.constraintlayout.widget.ConstraintLayout>
